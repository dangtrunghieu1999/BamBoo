doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='/resource/css/style.css')
  title Quên mật khẩu
.main 
  form#form-1.form(action='/auth/forgetpw', method='POST')
    h3.heading Quên mật khẩu
    .form-group
      label.form-label(for='email') Email
      input#email.form-control(name='email', type='text', placeholder='VD: email@domain.com')
      span.form-message
    button.form-submit Lấy lại mật khẩu
script(src='/resource/js/validator.js')
script.
  Validator({
  form: '#form-1',
  errorSelector: '.form-message',
  formGroupSelector: '.form-group',
  rules: [
     Validator.isEmail('#email')
  ],
